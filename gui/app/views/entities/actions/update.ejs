<%- include ../../layouts/header.ejs %>

        <div class="page-data">

            <form method="post" action="/crud/edit/<%=data[0].id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">id</td><td>: <input type="text" name="id" value="<%=data[0].id%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">name</td>
                    <td valign="top">:
                        <textarea name="name" required cols="30" rows="5"><%=data[0].name%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">create_datetime</td><td>: <input type="text" value="<%=data[0].create_datetime%>" name="create_datetime" required></td>
                 </tr>
                  <tr>
                    <td class="label">end_datetime</td><td>: <input type="text" name="end_datetime" value="<%=data[0].end_datetime%>" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancel_add_entity()">
                    </td>
                 </tr>
                </table>
            </form>

        </div>

